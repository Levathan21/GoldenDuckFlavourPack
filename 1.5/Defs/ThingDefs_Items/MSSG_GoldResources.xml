<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <ThingDef ParentName="ResourceBase">
        <defName>MSSG_FoolsGold</defName>
        <label>gold</label>
        <description>The most seductive metal of them all. While it is too soft to be of much practical use... wait a second, this is a bit hard for gold... Oh bother it's fool's gold. A pretty iron sulphide. Well it's shiny at least, so maybe there's some use for it.</description>
        <graphicData>
            <texPath>Things/Item/Resource/Gold</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <soundInteract>Silver_Drop</soundInteract>
        <soundDrop>Silver_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MarketValue>1</MarketValue>
            <RoyalFavorValue>0</RoyalFavorValue>
            <Mass>0.5</Mass>
            <StuffPower_Armor_Sharp>0.8</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>0.5</StuffPower_Armor_Blunt>
            <StuffPower_Armor_Heat>0.3</StuffPower_Armor_Heat>
            <StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
            <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
            <SharpDamageMultiplier>0.9</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <slagDef>MSSG_ChunkSlagFoolsGold</slagDef>
        <stackLimit>500</stackLimit>
        <deepCommonality>1.0</deepCommonality>
        <deepCountPerPortion>8</deepCountPerPortion>
        <deepLumpSizeRange>1~4</deepLumpSizeRange>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>true</smeltable>
        <stuffProps>
            <stuffAdjective>goldish</stuffAdjective>
            <categories>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
            <commonality>0.04</commonality>
            <color>(255,235,122)</color>
            <constructEffect>ConstructMetal</constructEffect>
            <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
            <statOffsets>
                <Beauty>10</Beauty>
            </statOffsets>
            <statFactors>
                <MaxHitPoints>0.8</MaxHitPoints>
                <Flammability>0.7</Flammability>
                <Beauty>3</Beauty>
                <WorkToMake>0.9</WorkToMake>
                <WorkToBuild>0.9</WorkToBuild>
                <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
            </statFactors>
        </stuffProps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <allowedArchonexusCount>100</allowedArchonexusCount>
    </ThingDef>

    <ThingDef ParentName="ChunkSlagSteel">
        <defName>MSSG_ChunkSlagFoolsGold</defName>
        <label>fool's gold slag</label>
        <description>Some partially melted fool's gold. While useless in its current form, it can be smelted to extract a little steel.</description>
        <graphicData>
            <color>(0.65, 0.65, 0.35)</color>
        </graphicData>
        <saveCompressible>false</saveCompressible>
        <smeltProducts Inherit="False">
            <Steel>5</Steel>
        </smeltProducts>
    </ThingDef>

</Defs>
